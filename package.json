{
  "name": "cha-ching-api",
  "version": "0.0.1",
  "description": "CHA CHING API",
  "author": "Donato Yi",
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-ts && npm run tslint",
    "serve": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "test": "jest --forceExit",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "jest": {
    "globals": {
      "__TS_CONFIG__": "tsconfig.json"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "@sendgrid/client": "^6.2.1",
    "acl": "^0.4.11",
    "async": "^2.1.2",
    "authy": "^1.3.0",
    "authy-client": "^1.0.10",
    "bcrypt-nodejs": "^0.0.3",
    "binance-api-node": "^0.7.6",
    "body-parser": "^1.15.2",
    "btoa": "^1.1.2",
    "coinbase": "^2.0.8",
    "compression": "^1.6.2",
    "connect-mongo": "^2.0.1",
    "cors": "^2.8.4",
    "countries-list": "^2.2.0",
    "country-list": "^1.1.0",
    "crypto-js": "^3.1.9-1",
    "dotenv": "^5.0.1",
    "email-verification": "^0.4.6",
    "errorhandler": "^1.4.3",
    "express": "^4.14.0",
    "express-bearer-token": "^2.1.1",
    "express-brute": "^1.0.1",
    "express-validator": "^5.2.0",
    "jsonwebtoken": "^8.1.0",
    "lodash": "^4.17.4",
    "lusca": "^1.4.1",
    "mandrill-api": "^1.0.45",
    "mime-types": "^2.1.17",
    "moment": "^2.20.1",
    "mongodb": "^3.1.0-beta4",
    "mongoose": "^5.1.2",
    "morgan": "^1.7.0",
    "nodemailer": "^4.6.4",
    "passport": "0.4.0",
    "passport-local": "^1.0.0",
    "request": "^2.78.0",
    "strong-soap": "^1.5.0"
  },
  "devDependencies": {
    "@types/acl": "^0.4.34",
    "@types/async": "^2.0.40",
    "@types/bcrypt-nodejs": "0.0.30",
    "@types/body-parser": "^1.16.2",
    "@types/coinbase": "^2.0.1",
    "@types/compression": "0.0.36",
    "@types/connect-mongo": "0.0.35",
    "@types/cors": "^2.8.3",
    "@types/dotenv": "^4.0.3",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.11.1",
    "@types/express-brute": "0.0.36",
    "@types/express-session": "1.15.8",
    "@types/jest": "^22.2.3",
    "@types/jsonwebtoken": "^7.2.3",
    "@types/lodash": "^4.14.63",
    "@types/mandrill-api": "^1.0.30",
    "@types/mongodb": "^3.0.18",
    "@types/mongoose": "^5.0.14",
    "@types/morgan": "^1.7.32",
    "@types/node": "^10.1.2",
    "@types/nodemailer": "^4.6.0",
    "@types/passport": "^0.4.5",
    "@types/request": "2.47.0",
    "concurrently": "^3.4.0",
    "jest": "^22.4.4",
    "nodemon": "^1.11.0",
    "ts-jest": "^22.4.6",
    "tslint": "^5.0.0",
    "typescript": "^2.4.0"
  }
}
